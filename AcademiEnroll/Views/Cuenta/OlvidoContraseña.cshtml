@{
    ViewData["Title"] = "OlvidoContraseña";
    Layout = null;
}

@model Usuario

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Olvidé mi Contraseña</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="~/images/logo/logo_pestaña.png" rel="icon" />
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <section class="bg-transparent py-3 py-md-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
                    <div class="rounded-3 shadow-sm acrylic-card">
                        <div class="card-body p-3 p-md-4 p-xl-5">
                            <div class="text-center mb-3">
                                <img src="~/images/logo/Logo.jpg" alt="BootstrapBrain Logo" class="rounded-3" width="100%" height="auto">
                            </div>
                            <h2 class="fs-6 fw-normal text-center text-primary mb-4">Olvidé mi Contraseña</h2>
                            <form asp-action="OlvidoContraseña" method="post">
                                <div class="row gy-2 overflow-hidden">
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" name="correo" id="correo"
                                                   placeholder="Ingrese su correo para restablecer la contraseña" required>
                                            <label for="correo" class="form-label text-dark">Correo</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="d-grid my-3">
                                            <button class="btn btn-primary btn-lg" type="submit">Restablecer Contraseña</button>
                                        </div>
                                    </div>
                                    @if (ViewBag.Mensaje != null)
                                    {
                                        <div class="col-12">
                                            <p class="text-success">@ViewBag.Mensaje</p>
                                        </div>
                                    }
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/alertas.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>

