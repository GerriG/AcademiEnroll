@{
    ViewData["Title"] = "Login";
}

@{
    Layout = null;
}


@model Usuario
<!DOCTYPE html>
<html>
<head>
    <title>Iniciar Sesión</title>
    <link href="~/css/login.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <section class="bg-transparent py-3 py-md-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
                    <div class="rounded-3 shadow-sm acrylic-card ">
                        <div class="card-body p-3 p-md-4 p-xl-5">
                            <div class="text-center mb-3">
                                <img src="~/images/logo/Logo.jpg" alt="BootstrapBrain Logo" class="rounded-3" width="100%" height="auto">
                            </div>
                            <h2 class="fs-6 fw-normal text-center text-secondary mb-4">Inicia sesión en tu cuenta</h2>
                            <form class="" asp-action="Login" method="post">
                                <div class="row gy-2 overflow-hidden">
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input type="email" class="form-control" name="correo" id="correo"
                                                   placeholder="Ingrese su correo para acceder" required>
                                            <label for="correo" class="form-label">Correo</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input type="password" class="form-control" name="clave" id="clave"
                                                   value="" placeholder="Ingresa tu contraseña" required>
                                            <label for="clave" class="form-label">Contaseña</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="d-flex gap-2 justify-content-between">
                                            <p>
                                                <a href="@Url.Action("OlvidoContraseña", "Cuenta")">
                                                    ¿Olvidaste tu contraseña?
                                                </a>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="d-grid my-3">
                                            <button class="btn btn-primary btn-lg" type="submit">Inicar sesion</button>
                                        </div>
                                    </div>                                    
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @{
        // Verifica si el usuario está autenticado
        bool estaAutenticado = User.Identity.IsAuthenticated;
    }

    @if (estaAutenticado)
    {
        <form asp-action="CerrarSesion" method="post">
            <button type="submit" class="btn btn-danger">Cerrar Sesión</button>
        </form>
    }

</body>
</html>
