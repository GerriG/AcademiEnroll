@{
    ViewData["Title"] = "Login";
}

@{
    Layout = null;
}


@model Usuario
<!DOCTYPE html>
<html>
<head>
    <title>Iniciar Sesión</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-lg-12">
                <div class="card shadow p-4">
                    <div class="card-body">
                        <h3 class="text-center mb-4">Iniciar Sesión</h3>
                        <form class="align-content-lg-center" asp-action="Login" method="post">
                            <div class="mb-3">
                                <label for="correo" class="form-label">Correo</label>
                                <input type="text" name="correo" id="correo" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label for="clave" class="form-label">Contraseña</label>
                                <input type="password" name="clave" id="clave" class="form-control" required>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Ingresar</button>
                        </form>
                        <div class="text-center mt-3">
                            <p>¿No tienes cuenta? <a href="@Url.Action("Registro", "Cuenta")">Regístrate</a></p>
                            <p><a href="@Url.Action("OlvidoContraseña", "Cuenta")">¿Olvidaste tu contraseña?</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 

    @{
        // Verifica si el usuario está autenticado
        bool estaAutenticado = User.Identity.IsAuthenticated;
    }

    @if (estaAutenticado)
    {
        <form asp-action="CerrarSesion" method="post">
            <button type="submit" class="btn btn-danger">Cerrar Sesión</button>
        </form>
    }

</body>
</html>
