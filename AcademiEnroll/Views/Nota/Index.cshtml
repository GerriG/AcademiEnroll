@model IEnumerable<AcademiEnroll.Models.Nota>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @if ((bool)ViewBag.EsDocente)
    {
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Cargar Nota
        </a>
    }
</p>

<h1>Listado de notas</h1>

<table id="Nota" class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreEstudiante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreAsignatura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calificacion)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreEstudiante)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreAsignatura)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Calificacion)
                </td>
                <td>
                    @if ((bool)ViewBag.EsAdministrador)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm text-white" title="Editar">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="Detalles">
                        <i class="fas fa-info-circle"></i> Detalles
                    </a>
                    @if ((bool)ViewBag.EsAdministrador)
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm text-white" title="Eliminar">
                            <i class="fas fa-trash"></i> Eliminar
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="//cdn.datatables.net/2.1.8/js/dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            let table = new DataTable('#Nota', {
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/2.1.8/i18n/es-MX.json"
                }
            });
        });
    </script>
}

