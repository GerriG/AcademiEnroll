@model NotaViewModel

@{
    ViewData["Title"] = "Detalles de la Nota";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Detalles de la Nota</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreEstudiante)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreEstudiante)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Calificacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Calificacion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreDocente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreDocente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Periodo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Periodo)
        </dd>
    </dl>
</div>
<div>
    @if (ViewBag.EsDocente != null && (bool)ViewBag.EsDocente)
    {
        @Html.ActionLink("Modificar", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary btn-sm" })
    }
    |
    <a asp-action="Index" class="btn btn-warning btn-sm">Regresar al listado</a>
</div>
